{
    "name": "setono/sylius-google-ads-plugin",
    "description": "Google Ads plugin for Sylius.",
    "license": "MIT",
    "type": "symfony-bundle",
    "keywords": [
        "sylius",
        "sylius-plugin"
    ],
    "require": {
        "php": ">=8.1",
        "doctrine/collections": "^1.6",
        "doctrine/orm": "^2.7",
        "doctrine/persistence": "^1.3 || ^2.2",
        "google/auth": "^1.26",
        "googleads/google-ads-php": "^19.0",
        "knplabs/knp-menu": "^3.1",
        "psr/event-dispatcher": "^1.0",
        "setono/doctrine-object-manager-trait": "^1.0",
        "sylius/resource-bundle": "^1.6",
        "symfony/config": "^5.4 || ^6.0",
        "symfony/console": "^5.4 || ^6.0",
        "symfony/dependency-injection": "^5.4 || ^6.0",
        "symfony/event-dispatcher": "^5.4 || ^6.0",
        "symfony/form": "^5.4 || ^6.0",
        "symfony/http-foundation": "^5.4 || ^6.0",
        "symfony/http-kernel": "^5.4 || ^6.0",
        "symfony/messenger": "^5.4 || ^6.0",
        "symfony/options-resolver": "^5.4 || ^6.0",
        "symfony/routing": "^5.4 || ^6.0",
        "symfony/string": "^5.4 || ^6.0",
        "twig/twig": "^2.15 || ^3.4",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "api-platform/core": "^2.7",
        "behat/behat": "^3.13",
        "lexik/jwt-authentication-bundle": "^2.17",
        "matthiasnoback/symfony-config-test": "^4.3",
        "phpunit/phpunit": "^9.6",
        "psalm/plugin-phpunit": "^0.18",
        "psalm/plugin-symfony": "^5.0",
        "setono/code-quality-pack": "^2.5",
        "sylius/sylius": "~1.12.8",
        "symfony/debug-bundle": "^5.4 || ^6.0",
        "symfony/dotenv": "^5.4 || ^6.0",
        "symfony/intl": "^5.4 || ^6.0",
        "symfony/web-profiler-bundle": "^5.4 || ^6.0",
        "symfony/webpack-encore-bundle": "^1.17",
        "weirdan/doctrine-psalm-plugin": "^2.8"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Setono\\SyliusGoogleAdsPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Setono\\SyliusGoogleAdsPlugin\\": "tests/"
        },
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "symfony/thanks": false,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "scripts": {
        "analyse": [
            "@ensure-test-container-exists",
            "psalm"
        ],
        "check-style": "ecs check",
        "ensure-test-container-exists": "[[ -f tests/Application/var/cache/test/Tests_Setono_SyliusGoogleAdsPlugin_Application_KernelTestDebugContainer.xml ]] || tests/Application/bin/console cache:warmup --env=test",
        "fix-style": "ecs check --fix",
        "phpunit": "phpunit"
    }
}
