{
    "name": "setono/sylius-google-ads-plugin",
    "type": "symfony-bundle",
    "description": "Google Ads plugin for Sylius.",
    "keywords": [
        "sylius",
        "sylius-plugin"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "psr/event-dispatcher": "^1.0",
        "sylius/resource-bundle": "^1.6",
        "symfony/config": "^4.4 || ^5.0",
        "symfony/dependency-injection": "^4.4 || ^5.0",
        "symfony/event-dispatcher": "^4.4 || ^5.0",
        "symfony/form": "^4.4 || ^5.0",
        "symfony/http-foundation": "^4.4 || ^5.0.7",
        "symfony/http-kernel": "^4.4 || ^5.1.5"
    },
    "require-dev": {
        "matthiasnoback/symfony-config-test": "^4.2",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-master",
        "setono/code-quality-pack": "^1.4",
        "sylius/sylius": "~1.8.8",
        "symfony/debug-bundle": "^5.1",
        "symfony/dotenv": "^5.2",
        "symfony/intl": "^4.4 || ^5.0",
        "symfony/maker-bundle": "^1.21",
        "symfony/web-profiler-bundle": "^5.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\SyliusGoogleAdsPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Setono\\SyliusGoogleAdsPlugin\\": "tests/"
        },
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon -l max src",
        "check-style": "vendor/bin/ecs check src/ tests/",
        "fix-style": "vendor/bin/ecs check src/ tests/ --fix",
        "phpspec": "vendor/bin/phpspec run -vvv",
        "phpunit": "vendor/bin/phpunit"
    }
}
