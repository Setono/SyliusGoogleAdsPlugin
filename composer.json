{
    "name": "setono/sylius-google-ads-plugin",
    "type": "symfony-bundle",
    "description": "Google Ads plugin for Sylius.",
    "keywords": [
        "sylius",
        "sylius-plugin"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "psr/event-dispatcher": "^1.0",
        "setono/php-templates-bundle": "^1.0",
        "setono/tag-bag-bundle": "^2.0@alpha",
        "setono/tag-bag-gtag": "^1.2",
        "sylius/sylius": "^1.7"
    },
    "require-dev": {
        "matthiasnoback/symfony-config-test": "^4.1",
        "matthiasnoback/symfony-dependency-injection-test": "^4.1",
        "phpspec/phpspec": "^6.2",
        "phpunit/phpunit": "^9.2",
        "roave/security-advisories": "dev-master",
        "setono/code-quality-pack": "^1.0",
        "symfony/browser-kit": "^4.4 || ^5.0",
        "symfony/debug-bundle": "^4.4 || ^5.0",
        "symfony/dotenv": "^4.4 || ^5.0",
        "symfony/intl": "^4.4 || ^5.0",
        "symfony/maker-bundle": "^1.15",
        "symfony/web-profiler-bundle": "^4.4 || ^5.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\SyliusGoogleAdsPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Setono\\SyliusGoogleAdsPlugin\\": "tests/"
        },
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon -l max src",
        "check-style": "vendor/bin/ecs check src/ spec/ tests/",
        "fix-style": "vendor/bin/ecs check src/ spec/ tests/ --fix",
        "phpspec": "vendor/bin/phpspec run -vvv",
        "phpunit": "vendor/bin/phpunit"
    }
}
