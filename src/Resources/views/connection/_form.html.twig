{# @var resource \Setono\SyliusGoogleAdsPlugin\Model\ConnectionInterface #}
{{ form_errors(form) }}
<div class="ui two column stackable grid">
    <div class="ten wide column">
        <div class="ui segment">
            <div class="ui two column grid">
                <div class="column">
                    {{ form_row(form.name) }}
                    <h4 class="ui dividing header">{{ 'setono_sylius_google_ads.form.connection.header.api'|trans }}</h4>
                    <div class="two fields">
                        {{ form_row(form.developerToken) }}
                        {{ form_row(form.clientId) }}
                    </div>
                    <div class="two fields">
                        {{ form_row(form.clientSecret) }}
                        {{ form_row(form.refreshToken) }}
                    </div>
                </div>
                <div class="column">
                    <h4 class="ui dividing header">{{ 'setono_sylius_google_ads.form.connection.header.eligibility'|trans }}</h4>
                    {{ form_row(form.enabled) }}
                </div>
            </div>
        </div>
    </div>
    <div class="six wide column">
        {% if resource.canAuthorize %}
            <div class="ui segment">
                {% if resource.refreshToken is null %}
                    <a class="ui large primary button" style="display: block" href="{{ path('setono_sylius_google_ads_admin_setup_authorize', {'connectionId': resource.id}) }}">
                        {{ 'setono_sylius_google_ads.ui.setup_connection_with_google_ads'|trans }}
                    </a>
                {% else %}
                    <a class="ui large primary button" style="display: block" href="{{ path('setono_sylius_google_ads_admin_setup_map_customer_id', {'connectionId': resource.id}) }}">
                        {{ 'setono_sylius_google_ads.ui.setup_connection_with_google_ads'|trans }}
                    </a>
                {% endif %}
            </div>
        {% endif %}
        <div class="ui segment">
            <h4 class="ui dividing header">{{ 'setono_sylius_google_ads.ui.setup_help.heading'|trans }}</h4>
            {{ 'setono_sylius_google_ads.ui.setup_help.body'|trans|raw }}
        </div>
    </div>
</div>
