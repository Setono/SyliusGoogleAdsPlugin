<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Setono\SyliusGoogleAdsPlugin\Model\Conversion" table="setono_sylius_google_ads__conversion">
        <indexes>
            <index columns="enabled" name="idx_enabled"/>
        </indexes>

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="code" type="string" unique="true"/>
        <field name="category" type="string"/>
        <!-- todo should there be a unique index over conversionId and conversionLabel? -->
        <field name="conversionId" type="string"/>
        <field name="conversionLabel" type="string"/>
        <field name="enabled" column="enabled" type="boolean"/>

        <many-to-many field="channels" target-entity="Sylius\Component\Channel\Model\ChannelInterface">
            <join-table name="setono_sylius_google_ads__conversion_channels">
                <join-columns>
                    <join-column name="conversion_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="channel_id" referenced-column-name="id" nullable="false" on-delete="CASCADE"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
